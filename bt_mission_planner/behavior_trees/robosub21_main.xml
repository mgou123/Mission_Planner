<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <SetBlackboard output_key="pose_topic_name" value="/auv4/nav/odom_ned"/>
      <MoveForwardDemo pose="{pose}" goal="{goal}" />
      <ReactiveSequence>
        <UpdatePose topic_name="{pose_topic_name}" output_key="pose" />
        <ReactiveFallback>
          <IsDistanceTraveled distance="5" pose="{pose}" />
          <NavigateToPose goal="{goal}"/>
        </ReactiveFallback>
      </ReactiveSequence>
    </Sequence>
  </BehaviorTree>
</root>