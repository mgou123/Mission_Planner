<?xml version="1.0"?>
<root>
  <TreeNodesModel>
    <!-- ############################### ACTION NODES ################################# -->
    <Action ID="NavigateToPose">
        <input_port name="server_name">Action server name</input_port>
        <input_port name="server_timeout">Timeout for action server to respond</input_port>
        <input_port name="goal">Destination to plan to</input_port>
        <input_port name="yaw_lock">Yaw to lock to. If specified, relative yaw in pose will be ignored.</input_port>
        <input_port name="yaw_lock_relative">Behavior of yaw_lock. If true, yaw_lock will be treated as relative.")</input_port>
        <input_port name="depth_lock">Depth to lock to. If specified, relative depth in pose will be ignored.</input_port>
        <input_port name="relative">Set to true to use relative coordinates</input_port>
    </Action>
    <Action ID="NavigateControl">
        <input_port name="server_name">Action server name</input_port>
        <input_port name="server_timeout">Timeout for action server to respond</input_port>
        <input_port name="forward">Forward</input_port>
        <input_port name="sideways">Sideways</input_port>
        <input_port name="depth">Depth</input_port>
        <input_port name="yaw">yaw</input_port>
    </Action>

    <Action ID="ManipulatorsService">
      <input_port name="service_name">Name of service</input_port>
      <input_port name="top_torpedo">True to fire top torpedo, false to disable it</input_port>
      <input_port name="bottom_torpedo">True to fire bottom torpedo, false to disable it</input_port>
      <input_port name="dropper">True to drop, false to disable it</input_port>
      <input_port name="grabber">DOES NOTHING DON'T USE</input_port>
      <input_port name="extend_linear">True to open grabber, false to disable it</input_port>
      <input_port name="retract_linear">True to close grabber, false to disable it</input_port>
    </Action>

    <Action ID="ModifyGoal">
      <input_port name="original_pose">Original Pose. Geometry Msg PoseStamped</input_port> 
      <input_port name="zeroed_components">Components to be zeroed. Accepts x,y,z only. Comma-separated</input_port> 
      <input_port name="modifying_pose">Modifying Pose to be added to Original Pose. Geometry Msg PoseStamped</input_port> 
      <output_port name="final_pose">Final Pose. Geometry Msg PoseStamped</output_port>
    </Action>

    <Action ID="CalcPicAngle">
      <input_port name="vision_objects">Detected Objects</input_port>
      <input_port name="target">Which object to go to</input_port>
      <input_port name="ratio">Ratio</input_port>
      <output_port name="goal">Output Goal. Geometry Msg PoseStamped</output_port>
    </Action>

    <!-- ############################### CONDITION NODES ############################## -->
    
    <!-- ############################### CONTROL NODES ################################ -->

    <!-- ############################### DECORATOR NODES ############################## -->

  </TreeNodesModel>
</root>
